{
    "parser": "babel-eslint",
    "extends": "airbnb",
    "plugins": ["react"],
    "env": {
        "es6": true,
        "jest": true
    },
    "rules": {
        "react/jsx-filename-extension": [
            "error",
            { "extension": [".js", ".jsx"] }
        ],
        "import/prefer-default-export": "off"
    },
    "globals": {
        "__DEV__": true,
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "settings": {
        "import/resolver": {
            "babel-plugin-root-import": {}
        }
    }
}
